<html lang="en">
<%- include("./componentes/head.ejs") %>

<body>
  <%- include("./componentes/nav.ejs") %>

  <div class="blogs content">
    <h2>Todo los Blogs</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>

        <h3 class="title"><%= blog.title %></h3>
        <p class="snippet"><%= blog.snippet %></p>

      <% }) %>
    <% } else { %>
      <p>No hay blogs...</p>
    <% } %>
    
  </div>

  <%- include("./componentes/footer.ejs") %>
</body>
</html>